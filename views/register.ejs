<div class="bg-blue-500 h-screen w-screen flex flex-col items-center justify-center">
    <form action="" method="POST" class="bg-slate-50 rounded flex flex-col items-center justify-center gap-3 px-7 py-6 shadow-xl w-80">
        <h1 class="font-bold text-xl self-start mb-2">Registration</h1>
        <div class="flex flex-col gap-1 w-full">
            <label for="first_name" class="font-semibold text-sm">First Name</label>
            <input type="text" name="first_name" value="<%= prev_values ? prev_values.first_name : '' %>" placeholder="First Name" class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            <p>
                <% if (errors && errors.first_name) { %>
                    <span class="text-red-500 text-xs"><%= errors.first_name %></span>
                <% } %>
            </p>
        </div>
        <div class="flex flex-col gap-1 w-full">
            <label for="last_name" class="font-semibold text-sm">Last Name</label>
            <input type="text" name="last_name" value="<%= prev_values ? prev_values.last_name : '' %>" placeholder="Last Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            <p>
                <% if (errors && errors.last_name) { %>
                    <span class="text-red-500 text-xs"><%= errors.last_name %></span>
                <% } %>
            </p>
        </div>
        <div class="flex flex-col gap-1 w-full">
            <label for="username" class="font-semibold text-sm">Username</label>
            <input type="text" name="username" value="<%= prev_values ? prev_values.username : '' %>" placeholder="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            <p>
                <% if (errors && errors.username) { %>
                    <span class="text-red-500 text-xs"><%= errors.username %></span>
                <% } %>
            </p>
        </div>
        <div class="flex flex-col gap-1 w-full">
            <label for="password" class="font-semibold text-sm">Password</label>
            <input type="password" name="password" placeholder="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            <p>
                <% if (errors && errors.password) { %>
                    <span class="text-red-500 text-xs"><%= errors.password %></span>
                <% } %>
            </p>
        </div>
        <div class="flex flex-col gap-1 w-full">
            <label for="c_password" class="font-semibold text-sm">Confirm Password</label>
            <input type="password" name="c_password" placeholder="Confirm Password"class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            <p>
                <% if (errors && errors.c_password) { %>
                    <span class="text-red-500 text-xs"><%= errors.c_password %></span>
                <% } %>
            </p>
        </div>
        <button type="submit" class="w-full mt-4 px-5 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700">Register Now</button>
        <p class="text-xs">Already have an account? <a href="/login" class="font-bold text-blue-500">Login</a></p>
    </form>
</div>